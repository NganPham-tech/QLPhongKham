@model IEnumerable<QLPhongKham.Models.Medicine>

@{
    ViewData["Title"] = "Quản lý Thuốc";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Danh sách Thuốc</h3>
                    <div class="card-tools">
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm thuốc mới
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Tên thuốc</th>
                                    <th>Mô tả</th>
                                    <th>Giá đơn vị</th>
                                    <th>Đơn vị</th>
                                    <th>Nhà sản xuất</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>                                        <td>
                                            @if (item.Description != null && item.Description.Length > 50)
                                            {
                                                @(item.Description.Substring(0, 50) + "...")
                                            }
                                            else
                                            {
                                                @item.Description
                                            }
                                        </td>
                                        <td>@string.Format("{0:N0} VNĐ", item.UnitPrice)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Manufacturer)</td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <span class="badge badge-success">Đang kinh doanh</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">Ngừng kinh doanh</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.MedicineId" class="btn btn-info btn-sm" title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.MedicineId" class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.MedicineId" class="btn btn-danger btn-sm" title="Xóa" 
                                                   onclick="return confirm('Bạn có chắc chắn muốn xóa thuốc này?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">Chưa có thuốc nào được thêm vào hệ thống.</p>
                            <a asp-action="Create" class="btn btn-primary">Thêm thuốc đầu tiên</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
