@model QLPhongKham.Models.Service

@{
    ViewData["Title"] = "Xóa Dịch vụ";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">
                        <i class="fas fa-exclamation-triangle"></i> Xác nhận xóa Dịch vụ
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa dịch vụ này không?
                        <br><strong>Lưu ý:</strong> Không thể xóa nếu dịch vụ đã được sử dụng trong cuộc hẹn.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Tên dịch vụ:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3">Mô tả:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3">Giá dịch vụ:</dt>
                        <dd class="col-sm-9">@string.Format("{0:N0} VNĐ", Model.Price)</dd>

                        <dt class="col-sm-3">Trạng thái:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge badge-success">Đang hoạt động</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Ngừng hoạt động</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ServiceId" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xác nhận xóa
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Hủy bỏ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
