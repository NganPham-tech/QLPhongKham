            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="py-4">
            <!-- Breadcrumb -->
            @if (ViewData["ShowBreadcrumb"] as bool? != false)
            {
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Dashboard
                            </a>
                        </li>
                        @if (ViewData["BreadcrumbItems"] != null)
                        {
                            @Html.Raw(ViewData["BreadcrumbItems"])
                        }
                    </ol>
                </nav>
            }

            <!-- Alert Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="bi bi-info-circle me-2"></i>@TempData["Info"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            <div class="row py-3">
                <div class="col-md-6">
                    &copy; 2024 - QLPhongKham Admin Panel
                </div>
                <div class="col-md-6 text-end">
                    <span class="small">
                        <i class="bi bi-clock me-1"></i>
                        Cập nhật lần cuối: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                    </span>
                </div>
            </div>
        </div>
    </footer>    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Quick export functions for navigation menu
        function quickExport(type) {
            const today = new Date();
            const fromDate = new Date(today.getFullYear(), today.getMonth(), 1).toISOString().split('T')[0]; // First day of month
            const toDate = today.toISOString().split('T')[0]; // Today
            
            let url = '';
            let needsDateRange = true;
            
            switch(type) {
                case 'invoices-excel':
                    url = '@Url.Action("ExportInvoicesExcel", "Report", new { area = "Admin" })';
                    break;
                case 'payments-excel':
                    url = '@Url.Action("ExportPaymentsExcel", "Report", new { area = "Admin" })';
                    break;
                case 'overdue-excel':
                    url = '@Url.Action("ExportOverdueInvoicesExcel", "Report", new { area = "Admin" })';
                    needsDateRange = false;
                    break;
                case 'financial-summary-excel':
                    url = '@Url.Action("ExportFinancialSummaryExcel", "Report", new { area = "Admin" })';
                    break;
            }
            
            if (url) {
                if (needsDateRange) {
                    $('<form method="post" action="' + url + '">' +
                      '<input name="fromDate" value="' + fromDate + '">' +
                      '<input name="toDate" value="' + toDate + '">' +
                      '</form>').appendTo('body').submit().remove();
                } else {
                    $('<form method="post" action="' + url + '"></form>').appendTo('body').submit().remove();
                }
            }
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        .avatar-sm {
            font-size: 1.5rem;
        }

        .navbar-brand {
            font-size: 1.25rem;
        }

        .footer {
            position: relative;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
        }

        /* Custom admin styles */
        .card {
            border-radius: 0.5rem;
        }

        .btn {
            border-radius: 0.25rem;
        }

        .alert {
            border-radius: 0.5rem;
        }

        /* Dashboard specific styles */
