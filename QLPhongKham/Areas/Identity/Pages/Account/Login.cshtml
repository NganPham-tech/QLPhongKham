@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập - Phòng khám";
    Layout = "~/Areas/Identity/Pages/Shared/_AuthLayout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">
                <i class="fas fa-user-md"></i>
            </div>
            <h1 class="auth-title">Đăng nhập hệ thống</h1>
            <p class="auth-subtitle">Phòng khám Đa khoa ABC</p>
        </div>
        
        <div class="auth-body">
            <form id="account" method="post">
                <div asp-validation-summary="All" class="auth-validation-summary" role="alert"></div>
                
                <div class="auth-form-group">
                    <div class="auth-input-group">
                        <i class="fas fa-envelope auth-input-icon"></i>
                        <input asp-for="Input.Email" class="auth-input" autocomplete="username" aria-required="true" placeholder="Nhập email của bạn" />
                        <label asp-for="Input.Email" class="auth-label">Email</label>
                    </div>
                    <span asp-validation-for="Input.Email" class="auth-error-text"></span>
                </div>
                
                <div class="auth-form-group">
                    <div class="auth-input-group">
                        <i class="fas fa-lock auth-input-icon"></i>
                        <input asp-for="Input.Password" class="auth-input" type="password" autocomplete="current-password" aria-required="true" placeholder="Nhập mật khẩu" />
                        <label asp-for="Input.Password" class="auth-label">Mật khẩu</label>
                    </div>
                    <span asp-validation-for="Input.Password" class="auth-error-text"></span>
                </div>
                
                <div class="auth-form-group">
                    <div class="auth-checkbox">
                        <input asp-for="Input.RememberMe" type="checkbox" class="auth-checkbox-input" />
                        <label asp-for="Input.RememberMe" class="auth-checkbox-label">
                            <span class="auth-checkbox-custom"></span>
                            Ghi nhớ đăng nhập
                        </label>
                    </div>
                </div>
                
                <button type="submit" class="auth-button">
                    <i class="fas fa-sign-in-alt"></i>
                    Đăng nhập
                </button>
            </form>
        </div>
        
        <div class="auth-footer">
            <div class="auth-links">
                <a asp-page="./ForgotPassword" class="auth-link">
                    <i class="fas fa-key"></i>
                    Quên mật khẩu?
                </a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">
                    <i class="fas fa-user-plus"></i>
                    Đăng ký tài khoản mới
                </a>
                <a asp-page="./ResendEmailConfirmation" class="auth-link">
                    <i class="fas fa-envelope-open"></i>
                    Gửi lại email xác nhận
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
