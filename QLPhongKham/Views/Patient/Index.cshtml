@{
    ViewData["Title"] = "Phòng Khám Đa Khoa";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">Phòng Khám Đa Khoa <span class="text-primary">MediCare</span></h1>
                    <p class="hero-subtitle">Chăm sóc sức khỏe toàn diện với đội ngũ bác sĩ giàu kinh nghiệm và trang thiết bị hiện đại</p>
                    <div class="hero-buttons">
                        <a href="@Url.Action("BookAppointment", "Patient")" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-calendar-plus"></i> Đặt Lịch Khám
                        </a>
                        <a href="@Url.Action("Services", "Patient")" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-stethoscope"></i> Xem Dịch Vụ
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <img src="~/images/hero-doctor.jpg" alt="Bác sĩ" class="img-fluid rounded shadow-lg">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quick Info Section -->
<section class="quick-info-section py-4 bg-primary text-white">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="quick-info-item">
                    <i class="fas fa-phone-alt fa-2x mb-2"></i>
                    <h5>Hotline</h5>
                    <p class="mb-0">1900 2468</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="quick-info-item">
                    <i class="fas fa-clock fa-2x mb-2"></i>
                    <h5>Giờ Làm Việc</h5>
                    <p class="mb-0">7:00 - 21:00 (T2-CN)</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="quick-info-item">
                    <i class="fas fa-map-marker-alt fa-2x mb-2"></i>
                    <h5>Địa Chỉ</h5>
                    <p class="mb-0">123 Đường ABC, Quận 1, TP.HCM</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="about-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="about-content">
                    <h2 class="section-title">Về Phòng Khám <span class="text-primary">MediCare</span></h2>
                    <p class="lead">Với hơn 10 năm kinh nghiệm trong lĩnh vực y tế, chúng tôi cam kết mang đến dịch vụ chăm sóc sức khỏe chất lượng cao với chi phí hợp lý.</p>
                    <div class="about-features">
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Đội ngũ bác sĩ chuyên môn cao
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Trang thiết bị y tế hiện đại
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Dịch vụ chăm sóc 24/7
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Chi phí hợp lý, minh bạch
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-image">
                    <img src="~/images/about-clinic.jpg" alt="Phòng khám" class="img-fluid rounded shadow">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services-section py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Dịch Vụ <span class="text-primary">Nổi Bật</span></h2>
            <p class="section-subtitle">Chúng tôi cung cấp đa dạng các dịch vụ y tế chất lượng cao</p>
        </div>
        <div class="row">
            @if (ViewBag.Services != null)
            {
                @foreach (var service in (List<QLPhongKham.Models.Service>)ViewBag.Services)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="service-card h-100">
                            <div class="service-icon">
                                <i class="fas fa-stethoscope"></i>
                            </div>
                            <div class="service-content">
                                <h5 class="service-title">@service.Name</h5>
                                <p class="service-description">@service.Description</p>                                <div class="service-price">
                                    <span class="price">@(service.Price > 0 ? service.Price.ToString("N0") : "Liên hệ") VNĐ</span>
                                </div>
                                <a href="@Url.Action("ServiceDetail", "Patient", new { id = service.ServiceId })" class="btn btn-outline-primary btn-sm">
                                    Xem Chi Tiết
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="text-center mt-4">
            <a href="@Url.Action("Services", "Patient")" class="btn btn-primary btn-lg">
                Xem Tất Cả Dịch Vụ
            </a>
        </div>
    </div>
</section>

<!-- Map Section -->
<section class="map-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Vị Trí <span class="text-primary">Phòng Khám</span></h2>
            <p class="section-subtitle">Chúng tôi ở vị trí thuận tiện, dễ dàng di chuyển</p>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="map-container">
                    <!-- Google Maps Embed -->
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.4326002643135!2d106.69717531533555!3d10.77499999227678!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f1c06f4e1dd%3A0x43900f1d4539489d!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBLaG9hIGjhu41jIFThu7Egbmhpw6puIC0gxJDhuqFpIGjhu41jIFF14buRYyBnaWEgVFAuSENNIChVSVQp!5e0!3m2!1svi!2s!4v1640764889890!5m2!1svi!2s" 
                            width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-info">
                    <h4>Thông Tin Liên Hệ</h4>
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt text-primary me-3"></i>
                        <div>
                            <strong>Địa chỉ:</strong><br>
                            123 Đường ABC, Quận 1<br>
                            TP. Hồ Chí Minh
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-phone text-primary me-3"></i>
                        <div>
                            <strong>Điện thoại:</strong><br>
                            Hotline: 1900 2468<br>
                            Cố định: (028) 1234 5678
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-envelope text-primary me-3"></i>
                        <div>
                            <strong>Email:</strong><br>
                            info@medicare.vn
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-clock text-primary me-3"></i>
                        <div>
                            <strong>Giờ làm việc:</strong><br>
                            Thứ 2 - Chủ nhật: 7:00 - 21:00
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.hero-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
}

.hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
}

.quick-info-section {
    background: #0056b3 !important;
}

.quick-info-item {
    padding: 1rem;
}

.section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
}

.section-subtitle {
    font-size: 1.1rem;
    color: #6c757d;
    margin-bottom: 3rem;
}

.about-features .feature-item {
    padding: 0.5rem 0;
    font-size: 1.1rem;
}

.service-card {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
}

.service-card:hover {
    transform: translateY(-5px);
}

.service-icon {
    font-size: 3rem;
    color: #007bff;
    margin-bottom: 1.5rem;
}

.service-title {
    font-weight: 600;
    margin-bottom: 1rem;
}

.service-price .price {
    font-size: 1.25rem;
    font-weight: 700;
    color: #28a745;
}

.contact-info {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 15px;
    height: 400px;
}

.contact-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 1.5rem;
}

.map-container {
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}
</style>
