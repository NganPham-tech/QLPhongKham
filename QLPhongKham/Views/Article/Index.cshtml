@model List<QLPhongKham.Models.Article>

@{
    ViewData["Title"] = "Tin tức - Bài viết y tế";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

@section Styles {
    <style>
        .article-card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            height: 100%;
        }

        .article-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }

        .article-image {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }

        .article-meta {
            font-size: 0.85rem;
            color: #6c757d;
        }

        .article-category {
            background: var(--primary-color);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .featured-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: var(--secondary-color);
            color: var(--dark-color);
            padding: 0.25rem 0.5rem;
            border-radius: 15px;
            font-size: 0.7rem;
            font-weight: bold;
        }

        .search-box {
            background: white;
            border-radius: 50px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }

        .category-filter {
            margin-bottom: 2rem;
        }

        .category-btn {
            margin: 0.25rem;
            border-radius: 25px;
            padding: 0.5rem 1rem;
        }

        .pagination-custom .page-link {
            border-radius: 50px;
            margin: 0 0.25rem;
            color: var(--primary-color);
        }

        .pagination-custom .page-item.active .page-link {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
    </style>
}

<section class="py-5">
    <div class="container">
        <!-- Header -->
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold text-primary">
                <i class="fas fa-newspaper me-3"></i>Tin tức & Bài viết y tế
            </h1>
            <p class="lead text-muted">Cập nhật thông tin sức khỏe và tin tức mới nhất từ phòng khám</p>
        </div>

        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 mb-4">
                <!-- Search -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-search me-2"></i>Tìm kiếm
                        </h6>
                        <form asp-action="Search" method="get">
                            <div class="input-group search-box">
                                <input type="text" name="keyword" class="form-control border-0" 
                                       placeholder="Nhập từ khóa..." value="@ViewBag.Keyword">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Categories -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-list me-2"></i>Danh mục
                        </h6>
                        <div class="d-grid gap-2">
                            <a asp-action="Index" class="btn @(string.IsNullOrEmpty(ViewBag.CurrentCategory) ? "btn-primary" : "btn-outline-primary") btn-sm">
                                Tất cả
                            </a>
                            @if (ViewBag.Categories != null)
                            {
                                @foreach (string category in ViewBag.Categories)
                                {
                                    <a asp-action="Index" asp-route-category="@category" 
                                       class="btn @(ViewBag.CurrentCategory == category ? "btn-primary" : "btn-outline-primary") btn-sm">
                                        @category
                                    </a>
                                }
                            }
                        </div>
                    </div>
                </div>

                <!-- Featured Articles -->
                @if (ViewBag.FeaturedArticles != null && ((List<QLPhongKham.Models.Article>)ViewBag.FeaturedArticles).Any())
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="fas fa-star me-2"></i>Bài viết nổi bật
                            </h6>
                            @foreach (var featured in (List<QLPhongKham.Models.Article>)ViewBag.FeaturedArticles)
                            {
                                <div class="d-flex mb-3">
                                    @if (!string.IsNullOrEmpty(featured.FeaturedImage))
                                    {
                                        <img src="@featured.FeaturedImage" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;" alt="@featured.Title">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">
                                            <a href="@Url.Action("Details", new { id = featured.ArticleId })" 
                                               class="text-decoration-none">@featured.Title</a>
                                        </h6>
                                        <small class="text-muted">@featured.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Main Content -->
            <div class="col-lg-9">
                @if (Model != null && Model.Any())
                {
                    <div class="row">
                        @foreach (var article in Model)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card article-card h-100">
                                    <div class="position-relative">
                                        @if (!string.IsNullOrEmpty(article.FeaturedImage))
                                        {
                                            <img src="@article.FeaturedImage" class="article-image" alt="@article.Title">
                                        }
                                        else
                                        {
                                            <div class="article-image bg-light d-flex align-items-center justify-content-center">
                                                <i class="fas fa-image fa-3x text-muted"></i>
                                            </div>
                                        }
                                        @if (article.IsFeatured)
                                        {
                                            <div class="featured-badge">
                                                <i class="fas fa-star me-1"></i>Nổi bật
                                            </div>
                                        }
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <div class="mb-2">
                                            <span class="article-category">@article.Category</span>
                                        </div>
                                        <h5 class="card-title">
                                            <a href="@Url.Action("Details", new { id = article.ArticleId })" 
                                               class="text-decoration-none">@article.Title</a>
                                        </h5>
                                        <p class="card-text text-muted flex-grow-1">@article.Summary</p>
                                        <div class="article-meta mt-auto">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small>
                                                    <i class="fas fa-user me-1"></i>@article.Author
                                                </small>
                                                <small>
                                                    <i class="fas fa-calendar me-1"></i>@article.CreatedAt.ToString("dd/MM/yyyy")
                                                </small>
                                            </div>
                                            <div class="mt-1">
                                                <small>
                                                    <i class="fas fa-eye me-1"></i>@article.ViewCount lượt xem
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Pagination -->
                    @if (ViewBag.TotalPages != null && (int)ViewBag.TotalPages > 1)
                    {
                        <nav aria-label="Article pagination">
                            <ul class="pagination pagination-custom justify-content-center">
                                @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @((int)ViewBag.CurrentPage == i ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { 
                                            page = i, 
                                            category = ViewBag.CurrentCategory 
                                        })">@i</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-newspaper fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">Chưa có bài viết nào</h4>
                        <p class="text-muted">Hãy quay lại sau để xem các bài viết mới nhất.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
